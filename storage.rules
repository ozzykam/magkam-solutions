rules_version = '2';
  service firebase.storage {
    match /b/{bucket}/o {

      function isSignedIn() {
        return request.auth != null;
      }

      // Product images - Admin only (use server-side admin SDK for write operations)
      match /products/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        // Client-side uploads to products are not allowed for security
        allow write: if false;
      }

      // Category images - Admin only (use server-side admin SDK for write operations)
      match /categories/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // Tag images - Admin only (use server-side admin SDK for write operations)
      match /tags/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // Vendor images - Admin only (use server-side admin SDK for write operations)
      match /vendors/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // User avatars
      match /avatars/{userId}/{imageId} {
        allow read: if true;
        allow write: if isSignedIn() && request.auth.uid == userId    
   &&
                       request.resource.size < 2 * 1024 * 1024 &&     
                       
  request.resource.contentType.matches('image/.*');
      }

      // User images (alternative path)
      match /users/{userId}/{imageId} {
        allow read: if true;
        allow write: if isSignedIn() && request.auth.uid == userId    
   &&
                       request.resource.size < 2 * 1024 * 1024 &&     
                       
  request.resource.contentType.matches('image/.*');
      }

      // Content images (blog posts, recipes, etc.) - Admin only
      match /content/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // SEO images (Open Graph images, etc.) - Admin only
      match /seo/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // User-specific uploads folder (properly scoped to user)
      match /uploads/users/{userId}/{allPaths=**} {
        allow read: if true;
        allow write: if isSignedIn() &&
                       request.auth.uid == userId &&
                       request.resource.size < 10 * 1024 * 1024;
      }

      // Admin uploads folder (for admin-uploaded content)
      match /uploads/admin/{allPaths=**} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // Branding folder (logos, favicons) - Admin only
      match /branding/{folder}/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // Services images - Admin only
      match /services/{imageId} {
        allow read: if true;
        // Write access should be done server-side with Admin SDK
        allow write: if false;
      }

      // Default deny
      match /{allPaths=**} {
        allow read, write: if false;
      }
    }
  }